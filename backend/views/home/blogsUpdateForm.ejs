<!DOCTYPE html>
<html lang="en">

<head>
  <title>Update Blogs</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white min-h-screen flex flex-col items-center justify-center">
  <!-- SmartTrack Header Section -->
  <div class="bg-gray-800 shadow-md rounded-lg p-6 w-full max-w-md">
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-6 text-center rounded-xl mb-6 w-full max-w-md">
      <h1 class="text-2xl font-bold mb-2">SmartTrack</h1>
      <p class="text-white/90 text-sm">Add New Blog</p>
    </div>

    <!-- Form Section -->
    <form action="/dashboard/blogs" method="POST" class="space-y-6">
      <!-- Topic -->
      <div>
        <label for="topic" class="block text-sm font-medium text-gray-300">Topic:</label>
        <input type="text" id="topic" name="topic" 
          class="mt-1 block w-full rounded-md bg-gray-700 border border-gray-600 text-white focus:border-blue-500 focus:ring-blue-500 p-2" 
          required>
      </div>

      <!-- Technology -->
      <div>
        <label for="technology" class="block text-sm font-medium text-gray-300">Technology:</label>
        <input type="text" id="technology" name="technology" 
          class="mt-1 block w-full rounded-md bg-gray-700 border border-gray-600 text-white focus:border-blue-500 focus:ring-blue-500 p-2" 
          required>
      </div>

      <!-- Title -->
      <div>
        <label for="title" class="block text-sm font-medium text-gray-300">Title:</label>
        <input type="text" id="title" name="title" 
          class="mt-1 block w-full rounded-md bg-gray-700 border border-gray-600 text-white focus:border-blue-500 focus:ring-blue-500 p-2" 
          required>
      </div>

      <!-- Description -->
      <div>
        <label for="description" class="block text-sm font-medium text-gray-300">Description:</label>
        <textarea id="description" name="description"
          class="mt-1 block w-full rounded-md bg-gray-700 border border-gray-600 text-white focus:border-blue-500 focus:ring-blue-500 p-2 h-24" 
          required></textarea>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" 
          class="w-full bg-pink-500 text-white py-2 px-4 rounded-md hover:bg-pink-600 focus:outline-none focus:ring-2 focus:ring-pink-400 focus:ring-offset-2">
          Add Blog
        </button>
      </div>
    </form>
  </div>
</body>

</html>
