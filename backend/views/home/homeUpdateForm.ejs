<!DOCTYPE html>
<html lang="en">

<head>
  <title>Update Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white min-h-screen flex flex-col items-center justify-center">
  <!-- SmartTrack Header Section -->
  
  <!-- Form Section -->
  <div class="bg-gray-800 shadow-md rounded-lg p-6 w-full max-w-md">
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-6 text-center rounded-xl mb-6 w-full max-w-md">
      <h1 class="text-2xl font-bold mb-2">SmartTrack</h1>
      <p class="text-white/90 text-sm">Home Section</p>
    </div>
    <!-- <h1 class="text-xl font-bold text-white mb-4 text-center">Update Home Section</h1> -->
    <form action="/dashboard/home" method="POST" class="space-y-6">
      
      <!-- Portfolio Name -->
      <div>
        <label for="portfolioName" class="block text-sm font-medium text-gray-300">Portfolio Name:</label>
        <input type="text" id="portfolioName" name="portfolioName" value="<%= homepage.portfolioName %>" 
          class="mt-1 block w-full rounded-md bg-gray-700 border border-gray-600 text-white focus:border-blue-500 focus:ring-blue-500 p-2" 
          required>
      </div>

      <!-- User Name -->
      <div>
        <label for="userName" class="block text-sm font-medium text-gray-300">User Name:</label>
        <input type="text" id="userName" name="userName" value="<%= homepage.userName %>" 
          class="mt-1 block w-full rounded-md bg-gray-700 border border-gray-600 text-white focus:border-blue-500 focus:ring-blue-500 p-2" 
          required>
      </div>

      <!-- Expertise -->
      <div>
        <label for="expertise" class="block text-sm font-medium text-gray-300">Expertise (comma-separated):</label>
        <input type="text" id="expertise" name="expertise" value="<%= homepage.expertise.join(', ') %>" 
          class="mt-1 block w-full rounded-md bg-gray-700 border border-gray-600 text-white focus:border-blue-500 focus:ring-blue-500 p-2" 
          required>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" 
          class="w-full bg-pink-500 text-white py-2 px-4 rounded-md hover:bg-pink-600 focus:outline-none focus:ring-2 focus:ring-pink-400 focus:ring-offset-2">
          Update
        </button>
      </div>
    </form>
  </div>
</body>

</html>
